<div class="container">
    <div class="row justify-content-center">
        <div class="col-4">
            <h1 class="display-4 text-center mb-4">Sign up</h1>

            <form action="/profile" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" class="form-control" id="name" aria-describedby="name" placeholder="Enter name">
                </div>

                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email"  name="email" class="form-control" id="Email" aria-describedby="Email" placeholder="Enter Email">
                </div>

                <div class="form-group">
                    <label for="naPasswordme">Password</label>
                    <input type="password" name="password" class="form-control" id="Password" aria-describedby="password" placeholder="Enter password">
                </div>

                <div class="form-group">
                    <label for="avtar">Avtar image</label>
                    <input type="file" name="avtar" class="form-control-file border rounded" id="avtar">
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>