<div class="container">
    <div class="row justify-content-center">
        <div class="col-4 mt-4 pt-4">
            <h3 class="text-center">User Profile</h3>

            <div class="text-center">
                <img src="{{filename}}" class="rounded rounded-circle mx-auto mb-5" height="200" width="200"/>
            </div>

            <div class="border-top p-2">
                <small>Name</small>
                <p>{{name}}</p>
            </div>

            <div class="border-top p-2">
                <small>Email</small>
                <p>{{email}}</p>
            </div>
        </div>
    </div>
</div>